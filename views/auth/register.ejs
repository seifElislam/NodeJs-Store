<%include ../layout/header %>
<%if(message!=undefined){%>
<h1><%=message%></h1>
<%}%>
<div class="container-fluid">
    <div class="row" style="margin-top:2% ;">
        <div class="col-sm-6 col-md-4 col-sm-offset-2 col-md-offset-4" style="text-align:center">
            <!-- <h1>Registration</h1> -->
        </div>
        <form action="/auth/register" method="post" enctype="multipart/form-data">
            <div class=" col-xs-6 col-md-4  col-xs-offset-3 col-md-offset-4 " style="">

                <div class="form-group  ">
                    <label class="" for="text">Name</label>
                    <input type="text" name="username" class="form-control" required />
                </div>

                <div class="form-group  ">
                    <label  class="" for="pwd">Password</label>
                    <input type="password" name="password" class="form-control" required>
                </div>
                <div class="form-group  ">
                    <label  class="" for="pwd">Confirm</label>
                    <input type="password" name="password2" class="form-control" required>
                </div>
                <div class="form-group  ">
                    <label  class="" for="email">Email</label>
                    <input type="email" name="email" class="form-control" required>
                </div>
                <div class="form-group  ">
                    <label  class="" for="">Choose img</label>
                    <input type="file" name="avatar" class="form-control">
                </div>



                <div class="form-group col-md-offset-9">
                    <button class=" btn btn-primary" type="sumbit">Sumbit</button>

                </div>

            </div>


        </form>
    </div>
</div>
<%include ../layout/footer %>
